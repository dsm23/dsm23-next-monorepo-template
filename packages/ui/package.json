{
  "name": "@repo/ui",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "sideEffects": false,
  "files": [
    "dist/**",
    "dist"
  ],
  "exports": {
    "./globals.css": "./src/styles/globals.css",
    "./postcss.config": "./postcss.config.js",
    "./components/button": {
      "import": {
        "types": "./dist/es/button.d.ts",
        "default": "./dist/es/button.js"
      },
      "require": {
        "types": "./dist/cjs/button.d.cts",
        "default": "./dist/cjs/button.cjs"
      }
    },
    "./components/dropdown-menu": {
      "import": {
        "types": "./dist/es/dropdown-menu.d.ts",
        "default": "./dist/es/dropdown-menu.js"
      },
      "require": {
        "types": "./dist/cjs/dropdown-menu.d.cts",
        "default": "./dist/cjs/dropdown-menu.cjs"
      }
    },
    "./components/theme-provider": {
      "import": {
        "types": "./dist/es/theme-provider.d.ts",
        "default": "./dist/es/theme-provider.js"
      },
      "require": {
        "types": "./dist/cjs/theme-provider.d.cts",
        "default": "./dist/cjs/theme-provider.cjs"
      }
    },
    "./lib/utils": {
      "import": {
        "types": "./dist/es/utils.d.ts",
        "default": "./dist/es/utils.js"
      },
      "require": {
        "types": "./dist/cjs/utils.d.cts",
        "default": "./dist/cjs/utils.cjs"
      }
    }
  },
  "scripts": {
    "build": "bunchee",
    "dev": "bunchee --watch",
    "lint:css": "stylelint \"**/*.css\" --max-warnings 0 --allow-empty-input --cache --cache-strategy=content --cache-location=.stylelintcache",
    "lint:js": "eslint . --max-warnings 0",
    "lint": "run-p lint:js lint:css",
    "check-types": "tsc --noEmit",
    "test": "vitest",
    "coverage": "vitest --coverage"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "2.1.16",
    "@radix-ui/react-slot": "1.2.3",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.542.0",
    "next-themes": "0.4.6",
    "tailwind-merge": "3.3.1"
  },
  "devDependencies": {
    "@fast-check/vitest": "0.2.2",
    "@repo/eslint-config": "workspace:*",
    "@repo/stylelint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@storybook/nextjs-vite": "9.1.3",
    "@tailwindcss/postcss": "4.1.12",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@turbo/gen": "2.5.6",
    "@types/node": "24.3.0",
    "@vitejs/plugin-react": "5.0.2",
    "@vitest/coverage-v8": "3.2.4",
    "bunchee": "6.6.0",
    "jsdom": "26.1.0",
    "npm-run-all2": "8.0.4",
    "postcss": "8.5.6",
    "prettier-plugin-css-order": "2.1.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "storybook": "9.1.3",
    "tailwindcss": "4.1.12",
    "tw-animate-css": "1.3.7",
    "typescript": "5.9.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.8",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  }
}
